#!/bin/sh

DOTFILES_DIR="$HOME/dotfiles"

if [ ! -d "$DOTFILES_DIR" ]; then
	echo "failed to locate dotfiles directory"
	exit 1
elif ! command -v stow 1> /dev/null; then
	echo "stow not found in PATH"
	exit 1
fi

stow --dir="$DOTFILES_DIR" --target="$HOME" --no-folding --verbose --stow .

echo "sync complete ($?)"

